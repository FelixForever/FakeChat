<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/wechat_message_padding_bottom" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_msg" >

        <com.wixappsite.fakechat.fakechat.Fx.RoundImageView
            android:id="@+id/iv_recv_avatar"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:src="@drawable/recv_useravatar"
            android:onClick="selectRecvAvatar"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_recv_img"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="@dimen/qq_margin_chat_msg"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_recv_avatar"
            android:layout_toEndOf="@+id/iv_recv_avatar">
        <com.wixappsite.fakechat.fakechat.Fx.RoundCornerImageView
            android:id="@+id/iv_recv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:minWidth="130dp"
            android:minHeight="130dp"

            android:longClickable="true"
            android:adjustViewBounds="true"
            android:maxWidth="180.0dip"
            android:maxHeight="180.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>