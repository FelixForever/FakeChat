<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/wechat_message_padding_bottom" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_msg" >

        <com.wixappsite.fakechat.fakechat.Fx.RoundImageView
            android:id="@+id/iv_recv_avatar"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:src="@drawable/recv_useravatar"
            android:onClick="selectRecvAvatar"/>


        <Button
            android:id="@+id/iv_recv_voice"
            style="@style/line_chat_content_date_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:background="@drawable/qq_recv_msg"
            android:gravity="left|center"
            android:longClickable="true"
            android:lineSpacingExtra="2dp"
            android:maxWidth="225.0dip"
            android:textCursorDrawable="@null"
android:text=" "
            android:layout_marginLeft="@dimen/qq_margin_chat_msg"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingLeft="77dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_recv_avatar"
            android:layout_toEndOf="@+id/iv_recv_avatar" />
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:id="@+id/iv_icon_recv_voice"
            android:src="@drawable/qq_icon_recv_voice"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/iv_recv_voice"
            android:layout_alignStart="@+id/iv_recv_voice" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 &apos;&apos;"
            android:id="@+id/tv_voice_length"
            android:textSize="13sp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_icon_recv_voice"
            android:layout_toEndOf="@+id/iv_icon_recv_voice" />
    </RelativeLayout>

</LinearLayout>