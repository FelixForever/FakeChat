<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_listview2_more"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listview_onclick"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/about_text"
        android:layout_alignParentLeft="true"
        android:textColor="@color/black75percent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:clickable="true"
        />

    <ImageView
        android:layout_width="10dip"
        android:layout_height="20dip"
        android:id="@+id/listview2_image_more"
        android:layout_alignParentRight="true"
        android:background="@drawable/activity_setting_icon_more"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"

        />

</RelativeLayout>