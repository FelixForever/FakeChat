<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
      <!--<item name="android:windowAnimationStyle">@style/anim_activity</item>-->
    </style>
    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">43dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>
    <style name="line_chat_content_date_style">
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>
    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="header1">
        <!--<item name="android:background">#ff333333</item>-->
        <item name="android:background">#22292c</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/header1_height</item>
    </style>
    <style name="header1_ibt">
        <item name="android:background">@drawable/sel_header1</item>
        <item name="android:padding">@dimen/header1_ibt_padding</item>
        <item name="android:layout_width">@dimen/header1_ibt_width</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="header1_title">
        <item name="android:textSize">@dimen/header1_title_fontsize</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:padding">@dimen/header1_title_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ez_listview_base">
        <item name="android:layoutAnimation">@anim/list_anim_layout</item>
        <item name="android:listSelector">@drawable/sel_list_item</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#ffe1e1e1</item>
        <item name="android:dividerHeight">1.0px</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="activity_chat_imgview">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="main_icon_imgview">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:foregroundGravity">center</item>
    </style>

    <style name="layout_all">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>
</resources>
